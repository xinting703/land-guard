/* 滑动删除list*/
.slide-list-box {
  padding-top: 15px;
  font-size: 11pt;
  min-height: 100%;
}
.slide-item{
    position: relative;
    border-top: 1px solid #eee;
    height: 70px;
    line-height: 70px;
    overflow: hidden;
}
.slide-item:last-child{
    border-bottom: 1px solid #eee;
}
.slide-item .inner{
    position: absolute;
    top:0;
}
.slide-item .inner.txt{
  background-color: #fff;
  width: 100%;
  z-index: 5;
  padding:0 15px;
  transition: left 0.2s ease-in-out;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  color: #666;
}
.slide-item .inner.edit{
  background-color: #C8C7CD;
  width: 80px;
  text-align: center;
  z-index: 4;
  right: 80px;
  color: #fff;
}
.slide-item .inner.del{
  background-color: red;
  width: 80px;
  text-align: center;
  z-index: 4;
  right: 0;
  color: #fff;
}
.slide-list-box .btn-add-wrap  {
  position: relative;
  height: 50px;
}
.slide-list-box .btn-add  {
  width: 50px;
  height: 50px;
  position: absolute;
  right: 0px;
  top: 0px;
  padding: 15px;
}
/* 滑动删除list结束*/

