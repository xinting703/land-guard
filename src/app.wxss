/*自定义toast提示*/
.wrapper-tip {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
.tip {
  font-size: 16px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  transition: all 1s;
  padding: 10px 20px;
  text-align: center;
  background-color: #5e5e5e;
  opacity: .9;
  color: #fff;
  border-radius: 5px;
}
/*缺省显示  */
.empty-list {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 30rpx;
}
