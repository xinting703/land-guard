page {
  height: 100%;
  background-color: #f8f8f8;
}
.no-padding {
  padding: 0 !important;
}
.container {
  height: 100%;
  /*display: flex;*/
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
  font: 14px/20px Microsoft YaHei,\5b8b\4f53,tahoma,arial,sans-serif; 
  /*微信内字体的使用与所运行的系统字体保持一致   设置微软雅黑便于调试*/
