/*历史数据+统计分析*/
.options {
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
}
.options image {
    margin-right: 10rpx;
}
.options 
.opt-item {
    width: 50%;
    display: inline-block;
    padding-top: 28rpx;
}
.options
.btn-opt {
    height: 100%;
    line-height: 50rpx;
}
.options
.icon-history {
    width: 44rpx;
    height: 33rpx;
}
.options
.icon-trend {
    width: 38rpx;
    height: 31rpx;
    margin-bottom: 10rpx;
}
.options 
