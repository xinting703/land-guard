/**scenedata.wxss**/
.container {
    height: auto;
    min-height: 100%;
    -webkit-overflow-scrolling : touch;
    overflow-x: hidden;
}
.main-container {
  width: 100%;
  box-sizing: border-box;
}

/*头部*/
.wrapper-top {
  position: relative;
  width: 100%;
  height: 472rpx;
}
.indicator-dots {
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  z-index: 9;
  transform: translateX(-50%);
}
.indicator-dots
.dot-item {
  float: left;
  width: 8rpx;
  height: 8rpx;
  background-color: #d5fddd;
  border-radius: 50%;
  margin: 0 4rpx;
  transition: all .5s;
}
.indicator-dots
.dot-item.active {
  width: 20rpx;
  background-color: #75CA85;
  border-radius: 4rpx;
}
.wrapper-top
swiper {
  width: 100%;
  height: 100%;
}
.bg-scene {
    /* position: absolute; */
    width: 100%;
    height: 100%;
}
.scene-content {
    height: 100%;
}
.center-wrap {
  position: absolute;
  top: 25px;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
}
.scene-name {
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  white-space: nowrap;
  overflow-x: scroll;
  width: 100%;
  margin-bottom: 10rpx;
}
.arrow-block {
    position: absolute;
    top: 12rpx;
    width: 40rpx;
    height: 36rpx;
}
.divide {
    width: 60rpx;
    height: 4rpx;
    display: inline-block;
}
/*温度*/
.tem {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 90rpx;
    text-align: center;
}
.tem .unit {
  position: relative;
  font-size: 30pt;
  top: -10px;
}
.tem-label {
  position: absolute;
  top: -40rpx;
  width: 66rpx;
  height: 26rpx;
  display: inline-block;
  color: #fff;
  font-size: 20rpx;
  line-height: 30rpx;
  border-radius: 12rpx;
  margin-left: 5px;
}
/*数据摘要*/
.data-list {
    position: absolute;
    left: 0;
    width: 100%;
    height: 80rpx;
}
.data-list.data-fm1 {
    bottom: 46rpx;
}
.data-list.data-fm2 {
    bottom: 156rpx;
    text-align: left;
}
.data-list
.line-group {
    position: absolute;
    top: 50%;
    left: 33%;
    width: 34%;
    height: 40rpx;
    transform: translateY(-50%);
    border-left: 1px solid #81dc92;
    border-right: 1px solid #81dc92;
}
.data-list
.item {
    display: inline-block;
}
.data-list.data-fm1
.item {
    width: 33%;
}
.data-list.data-fm1
.item:nth-child(2n) {
    width: 34%;
}
.abs-line {
  position: absolute;
  bottom: 176rpx;
  left: 50%;
  width: 1px;
  height: 40rpx;
  background-color: #81dc92;
}
.data-list.data-fm2
.item {
  width: 50%;
}
