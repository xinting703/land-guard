.content-add {
  font-size: 30rpx;
}
/*历史图片*/
.wrapper-list-imgs {
    padding-bottom: 20rpx;
}
.img-wrap {
  width: 100%;
  background-color: #fff;
  padding: 0 20rpx 20rpx;
  margin-bottom: 20rpx;
}
.img-wrap:last-child {
  margin-bottom: 0;
}
.direction {
  height: 80rpx;
  font-size: 11pt;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  position: relative;
}
.direction
.block-line {
    width: 4rpx;
    height: 30rpx;
    display: inline-block;
    background: -webkit-linear-gradient(top,  #ade2a1 0%, #75ca85 100%);
    margin-bottom: -4rpx;
    border-radius: 4rpx;
}
.direction
.pic-name {
    display: inline-block;
    font-size: 30rpx;
    padding-left: 16rpx;
}
.direction
.pic-time {
    float: right;
    font-size: 24rpx;
    color: #cbcbcb;
}
.direction .icon-time {
  width: 26rpx;
  height: 26rpx;
  margin-right: 0;
  margin-bottom: 4rpx;
}
.monitor-pic {
  display: block;
  z-index: 9;
  width: 100%;
  height: 100rpx; /*图片未加载出来前的默认高度*/
  background-color: #999;
}
