/* pages/cleardata/cleardata.wxss */
.container {
  padding-top: 20rpx;
  height: auto;
}
.tip-container {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  text-align: center;
  padding: 35rpx 130rpx;
}
.tip-title {
  color: #F56670;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.tip-detail {
  width: 500rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 30rpx;
}
.confirm-wrapper {
  width: 100%;
  padding-left: 35rpx;
  padding-right: 35rpx;
  margin-top: 100rpx;
}
.checkbox {
  font-size: 30rpx;
  color: #333;
}
.check-box {
  transform: scale(.8);
}
.btn-clear {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 30rpx;
  border: 1px solid #ddd;
  background-color: #eee;
  margin-top: 20rpx;
}
button[disabled].btn-clear {
  background-color: #eee !important;
  color: #ccc;
}