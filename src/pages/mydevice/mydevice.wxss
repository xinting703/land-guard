.wrapper-list-detail {
    position: relative;
    min-height: 100%;
    padding-top: 0;
    padding-bottom: 20rpx;
    overflow-y: auto;
}
.wrapper-list-detail .icon-wrap .icon-add {
  margin-right: 0;
}
.scan-code {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 70px;
    height: 50px;
    padding: 12px 22px;
}