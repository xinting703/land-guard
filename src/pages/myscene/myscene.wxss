/*scene.wxss*/
.wrapper-list-scene {
    position: relative;
    width: 100%;
    padding: 20rpx;
}
.notice {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  height: 90rpx;
  display: block;
  line-height: 90rpx;
  color: #999;
  font-size: 26rpx;
  background-color: #FFFCE6;
}
.notice
.icon-warn {
  width: 36rpx;
  height: 30rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.notice
.btn-check {
  color: #f56670;
}
/*地块列表样式*/
.wrapper-list-scene
.list-item {
    position: relative;
    width: 100%;
    height: 140rpx;
    padding-left: 20rpx;
    padding-right: 150rpx;
    margin-top: 20rpx;
    border-radius: 4rpx;
}
.bg-green-gdt {
    background: -webkit-linear-gradient(top,  #ade2a1 0%, #75ca85 100%);
}
.bg-yellow-gdt {
    background: -webkit-linear-gradient(top,  #fce36d 0%, #eac142 100%);
}
.wrapper-list-scene
.list-item
.border-left {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 4rpx;
    border-top-left-radius: 4rpx;
    border-bottom-left-radius: 4rpx;
}
.wrapper-list-scene
.list-item
.name {
    width: 100%;
    height: 100%;
    font-size: 36rpx;
    line-height: 140rpx;
    padding-right: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.wrapper-list-scene
.list-item
.member {
    position: absolute;
    right: 0;
    top: 0;
    width: 150rpx;
    height: 140rpx;
    font-size: 18rpx;
    padding-top: 20rpx;
}
.wrapper-list-scene
.member
.num {
    font-size: 48rpx;
    line-height: 70rpx;
}
.wrapper-list-scene
.member
.desc {
    font-size: 24rpx;
}